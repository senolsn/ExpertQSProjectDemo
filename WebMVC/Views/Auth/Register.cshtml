@model Entity.DTOs.UserRegisterDto

<h2>Kayıt Ol</h2>
<form asp-controller="Auth" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Email">E-posta</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Şifre</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName">İsim</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Soyisim</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>
