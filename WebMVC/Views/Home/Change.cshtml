@model Entity.Concrete.Change 


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Döviz</th>
            <th>Alış Fiyatı</th>
            <th>Satış Fiyatı</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>USD</td>
                <td>@ViewBag.USDBuying</td>
                <td>
                    @ViewBag.USDSelling
                </td>
            </tr>

        <tr>
            <td>EURO</td>
            <td>@ViewBag.EURBuying</td>
            <td>
                @ViewBag.EURSelling
            </td>
        </tr>


        <tr>
            <td>GBP</td>
            <td>@ViewBag.GBPBuying</td>
            <td>
                @ViewBag.GBPSelling
            </td>
        </tr>
    </tbody>
</table>

<br />
<br />


<form method="post" action="/Home/SaveChange">
    <div class="form-group">
        <label for="currencySelect">Döviz:</label>
        <select class="form-control" id="currencySelect" name="currencySelect">
            <option value="">-- Döviz Seçin --</option>
            @foreach (var code in ViewBag.ChangeCodes)
            {
                <option value="@code.Id">@code.Code</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Değişiklikleri Kaydet</button>
</form>